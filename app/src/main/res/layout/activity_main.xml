<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/light_blue">



    <TextView
        style="@style/heading"
        android:text="@string/my_nanodegree_apps"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

    <Button
        style="@style/normalButton"
        android:text="@string/spotify_streamer"
        android:id="@+id/spotify_streamer_button"
        android:layout_below="@+id/title"
        android:onClick="spotifyStreamerLaunch"/>

    <Button
        style="@style/normalButton"
        android:id="@+id/scores_app_button"
        android:text="@string/scores_app"
        android:layout_below="@+id/spotify_streamer_button"
        android:onClick="scoresAppLaunch"/>

    <Button
        style="@style/normalButton"
        android:text="@string/library_app"
        android:id="@+id/library_app_button"
        android:layout_below="@+id/scores_app_button"
        android:onClick="libraryAppLaunch"/>

    <Button
        style="@style/normalButton"
        android:text="@string/build_it_bigger"
        android:id="@+id/buit_it_bigger_button"
        android:layout_below="@+id/library_app_button"
        android:onClick="buildItBiggerLaunch"/>

    <Button
        style="@style/normalButton"
        android:text="@string/xyz_reade"
        android:id="@+id/xyz_reader_button"
        android:layout_below="@+id/buit_it_bigger_button"
        android:onClick="xyzReaderLaunch"/>

    <Button
        style="@style/loudButton"
        android:text="@string/capstone"
        android:id="@+id/capstone_button"
        android:layout_below="@+id/xyz_reader_button"
        android:onClick="capstoneLaunch"/>

</RelativeLayout>
